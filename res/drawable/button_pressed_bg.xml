<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 渐变 -->
    <gradient
        android:startColor="#8B6914"
        android:endColor="#8B8970"
        android:angle="0"
        android:gradientRadius="50"
        android:type="linear" />

    <!-- 描边 -->
    <stroke
        android:width="2dp"
        android:color="#8B8970" />

    <!-- 圆角 -->
    <corners android:radius="10dp" />

    <!-- 间隔  -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
</shape>